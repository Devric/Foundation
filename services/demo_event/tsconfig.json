{
    "compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"types": [
			"node"
		],
		"target": "ES2019",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"pretty": true,
		"strict": true,
		"alwaysStrict": true,
		"resolveJsonModule": true,
        "experimentalDecorators": true
    }
}
